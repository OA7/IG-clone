<% flash.each do |message_type, message_content| %>
<!--
  <div class="alert alert-<%= message_type %> mine">
      <%= message_content %>
  </div>
  -->

  <div class="alert alert-<%= message_type %> alert-dismissible fade show mine" role="alert">
    <%= message_content %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

<% end %>