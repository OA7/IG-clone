<% @follower_suggestions.each do |user| %>
  <div class="recommenden-follower">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
         <%= link_to profile_picture(user), profile_path(user) %>
      </div>
      <div class="col-sm-9 col-lg-10">
        <%= form_tag follow_account_path, method: :post, class: 'float-right' do %>
          <%= hidden_field_tag :follow_id, user.id %>
          <%= submit_tag 'Follow', class: 'btn btn-info btn-sm' %>
        <% end %>
        <%= link_to user.username, profile_path(user), class: 'text-dark' %>
        <p class="text-muted"><%= user.created_at > 2.days.ago ? "New to InstaClone" : "Followed by X users" %></p>
      </div>
    </div>
  </div>
<% end %>


